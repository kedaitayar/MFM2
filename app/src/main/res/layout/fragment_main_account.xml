<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account.MainAccountFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/placeholder_button_add_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/placeholder_button_edit_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="edit account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeholder_button_add_account" />

    <TextView
        android:id="@+id/placeholder_account_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="account balance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeholder_button_edit_account" />

    <FrameLayout
        android:id="@+id/account_list_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/placeholder_account_balance" />


</androidx.constraintlayout.widget.ConstraintLayout>